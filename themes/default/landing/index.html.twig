{% extends 'layout/base.html.twig' %}

{% block body %}
    {# Hero section #}
    {{ include('components/hero.html.twig') }}

    {# Featured categories #}
    <section class="section">
        <div class="container">
            <h2 class="text-center mb-5">{{ 'pteroca.landing.categories.title'|trans }}</h2>
            {{ include('components/category-grid.html.twig', {
                categories: categories
            }) }}
        </div>
    </section>

    {# Featured products #}
    <section class="section bg-light">
        <div class="container">
            <h2 class="text-center mb-5">{{ 'pteroca.landing.products.title'|trans }}</h2>
            {{ include('components/featured-products.html.twig', {
                products: featuredProducts
            }) }}
        </div>
    </section>

    {# Call to action #}
    {{ include('components/cta-section.html.twig') }}
{% endblock %}
